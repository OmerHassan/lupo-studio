<?xml version="1.0" encoding="utf-8"?><mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" 	xmlns:view="com.dehats.demoapp.view.*">		<mx:Style source="shopStyles.css"/>		<mx:Metadata>		[ResourceBundle("Main")]	</mx:Metadata>		<mx:Script>		<![CDATA[			import com.dehats.demoapp.Main;						import mx.collections.ArrayCollection;					private var main:Main= new Main();			[Bindable] private var languages:ArrayCollection=new ArrayCollection([{label:"english", data:"en_US"},{label:"french", data:"fr_FR"},{label:"chinese", data:"zh_CN"},]);						private function setLocale(pLg:String):void			{				resourceManager.localeChain=[pLg, "en_US"];			}								]]>	</mx:Script>	<mx:ApplicationControlBar x="10" y="10" dock="true"> 			<mx:Label text="{resourceManager.getString('Main','Some_Cool_Shop')}" styleName="TitleStyle"/>				<mx:Label text="{resourceManager.getString('Main','A_demo_application')}"/> 			<mx:Spacer width="100%"/>				<mx:Button label="{resourceManager.getString('Main','Sign_Up')}"			click=" main.promptErrorMsg()"/>			<mx:Button label="{resourceManager.getString('Main','Login')}"			click=" main.promptGreetings()"/>		<mx:Button label="{resourceManager.getString('Main','Logout')}"			enabled="false" />				<mx:ComboBox id="lgCMB"					 dataProvider="{languages}"					 labelField="label"					 change="setLocale(lgCMB.selectedItem.data.toString());"/>									</mx:ApplicationControlBar>			<mx:HBox top="10" bottom="10" left="10" right="10">			<mx:Panel layout="absolute" width="50%" height="100%"			title="{resourceManager.getString('Main','Products')}">			<mx:Image x="0" y="0" source="assets/products.jpg"/>					</mx:Panel>						<mx:Panel layout="absolute" width="50%" height="100%"			title="{resourceManager.getString('Main','Order_Validation')}">						<mx:Accordion left="10" right="10" top="10" bottom="10">							<view:Basket label="{resourceManager.getString('Main','Basket')}" width="100%" height="100%"/>								<view:PersoInfos label="{resourceManager.getString('Main','Personnal_Informations')}" width="100%" height="100%"/>								<view:Confirmation label="{resourceManager.getString('Main','Confirmation')}" width="100%" height="100%"/>							</mx:Accordion>					</mx:Panel>				</mx:HBox>	</mx:Application>